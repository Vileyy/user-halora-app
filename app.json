{
  "expo": {
    "name": "Halora Cosmetic",
    "slug": "user-halora-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/halora-icon-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/halora-icon-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Ứng dụng cần quyền truy cập microphone để ghi âm tin nhắn voice cho chatbot AI."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/halora-icon-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.viley.userhaloraapp",
      "permissions": ["android.permission.RECORD_AUDIO"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["@react-native-google-signin/google-signin"],
    "extra": {
      "eas": {
        "projectId": "8662ee86-2638-42d1-b63b-b277d7a1ac94"
      },
      "googleSignIn": {
        "androidClientId": "1029103419885-iqcquo983spkugqhdcqeu5p6l1th3g8d.apps.googleusercontent.com"
      }
    },
    "owner": "viley"
  }
}
